!  real,  intent(in), dimension(:,:,:) :: uu, vv, tt, qq   ! dimension (nlon, nlat, nlay)
!
!  real,  intent(in), dimension(:,:,:) ::             &    ! dimension (nlon, nlat, nlay+1)
